<Page x:Class="esoft.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:esoft"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid Background="White">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Bottom">
                <Image Source="Image/logo.png" Height="80"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
                    <TextBlock Text="Введите логин:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBox x:Name="TextBoxLogin"  Width="200" HorizontalAlignment="Right"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
                    <TextBlock Text="Введите пароль:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <PasswordBox x:Name="PasswordBoxPassword"  Width="200" HorizontalAlignment="Right"/>
                </StackPanel>

                <TextBlock Text=""/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Click="clickButtonRegister" x:Name="ButtonLogout" Content="Регистрация" Width="150" Background="{StaticResource LightRed}"/>
                    <Button Click="clickButtonLogin" x:Name="ButtonLogin" Content="Войти" Width="150"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
